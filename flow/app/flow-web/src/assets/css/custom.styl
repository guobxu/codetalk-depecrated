
mainColor = #33C3F0
whiteColor = #FFF

*
	box-sizing border-box

body
	margin 0
	background #e6ecf0

a
	text-decoration none
	&:hover
		text-decoration underline

/****************** nav ******************/
.wrapper-nav 
	background-color mainColor
	ul.nav
		list-style none
		li
			display inline-block
			padding 20px 18px	
			margin-bottom 0
			> a 
				color whiteColor
				font-size 1.2em
				margin 0 9px
				text-decoration none
				&:hover
					text-decoration underline
				&.router-link-exact-active
					font-style italic
			&.pull-right
				float right
		ul.sub-nav
			margin 0
			padding 0
			font-size 100%
			li
				margin 0
				padding 0

/****************** content ******************/

.wrapper-content 
	padding 16px 32px
	

.container
	max-width 900px

input.error[type='text'], input.error[type='password']
	border 1px solid #a94442
	margin-bottom 2px

span.msg-error
	color #a94442
	display inline-block
	margin-bottom 12px


/********************************* Modal Section *********************************/

.modal-mask
	position fixed
	z-index 9998
	top 0
	left 0
	width 100%
	height 100%
	background-color: rgba(0, 0, 0, .5)
	display table
	transition opacity .3s ease
  
.modal-wrapper
	display table-cell

.modal-container
	width 300px
	margin 0px auto
	padding 16px 20px
	background-color whiteColor
	border-radius 2px
	box-shadow 0 2px 8px rgba(0, 0, 0, .33)
	transition all .3s ease

.modal-header h3 
	margin-top 0
	color mainColor

.modal-body 
	margin 20px 0


.modal-default-button 
	float right
	&:hover
		color mainColor
		border-color mainColor
		cursor pointer

.modal-enter 
	opacity 0

.modal-leave-active 
	opacity 0

.modal-enter .modal-container,
.modal-leave-active .modal-container 
	-webkit-transform scale(1.1)
	transform scale(1.1)



















